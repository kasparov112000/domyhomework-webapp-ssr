# Environment Configuration
NODE_ENV=development
ENV_NAME=LOCAL

# Visitor Logging Configuration
ENABLE_VISITOR_LOGGING=true
# Automatically enabled when running locally with orchestrator
SEND_TO_AUDIT_API=true
VISITOR_LOG_DIR=./logs
VISITOR_LOG_RETENTION_DAYS=30

# Orchestrator Configuration
# Leave empty to auto-detect based on environment
# ORCHESTRATOR_URL=https://orchestrator.learnbytesting.ai

# Local orchestrator port (when running locally)
LOCAL_ORCHESTRATOR_PORT=8080

# Optional: Add your API key if required
# AUDIT_API_KEY=your_api_key_here

# Server Configuration
PORT=4000